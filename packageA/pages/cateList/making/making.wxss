.goods_item{
  display: flex;
  border-bottom: 2rpx solid white;
}
  .goods_img_wrap{
    flex:1;
    display:flex;
    justify-content: center;
    align-items: center;
    margin: 20rpx;
  }
   .goods_img_wrap image{
    width: 180rpx;
    height: 180rpx;
    margin-right: 10rpx;
    border-radius: 5rpx;
    }
  .goods_info_wrap{
    flex:1;
    display: flex;
    flex-direction: column;
    justify-content: space-around; 
  }
.goods_info_wrap .goods_name{
    color: #000;
text-align:left;
margin-bottom: 0rpx; 
font-weight:900;
font-size: larger;
  }
.goods_info_wrap .goods_price{
  color: #e80080;
  font-weight:1000;
  font-size: medium;
}